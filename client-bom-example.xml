<?xml version='1.0' encoding='UTF-8'?>
<project xmlns='http://maven.apache.org/POM/4.0.0' xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance' xsi:schemaLocation='http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd'><!-- Example client bom -->
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.mybank</groupId>
  <artifactId>backbase-client-bom</artifactId>
<!-- 
The customer is most likely NOT using the same version as the Backbase version.
 -->
  <version>BANK-VERSION-USING-2025.09</version>
  <packaging>pom</packaging>
  <name>Example BOM Client Project</name>
  <description>A BOM to select a subset of Backbase artifacts.</description>
  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>com.backbase</groupId>
        <artifactId>local-bundle-bom</artifactId>
        <type>pom</type>
        <scope>import</scope>
        <version>2025.09</version>
      </dependency>
    </dependencies>
  </dependencyManagement>
  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>3.1.2</version>
        <executions>
          <execution>
            <id>download</id>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/output</outputDirectory>
              <excludeTransitive>true</excludeTransitive>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
<!-- 
Listing all the artifacts for all the capabilities in the Backbase bom.
Typically, not everything is needed.
 -->
  <dependencies>
<!-- tag::term-deposit-management-bom[] -->
    <dependency>
      <groupId>com.backbase.tdm</groupId>
      <artifactId>term-deposit-manager</artifactId>
      <type>zip</type>
      <classifier>api</classifier>
    </dependency>
    <dependency>
      <groupId>com.backbase.tdm</groupId>
      <artifactId>term-deposit-manager</artifactId>
      <classifier>classes</classifier>
    </dependency>
    <dependency>
      <groupId>com.backbase.tdm</groupId>
      <artifactId>term-deposit-manager</artifactId>
      <type>json</type>
      <classifier>meta</classifier>
    </dependency>
    <dependency>
      <groupId>com.backbase.tdm</groupId>
      <artifactId>term-deposit-manager</artifactId>
    </dependency>
<!-- end::term-deposit-management-bom[] -->
<!-- tag::payments-processing-bom[] -->
    <dependency>
      <groupId>com.backbase.pp</groupId>
      <artifactId>payments-processor</artifactId>
      <classifier>classes</classifier>
    </dependency>
    <dependency>
      <groupId>com.backbase.pp</groupId>
      <artifactId>payments-processor</artifactId>
      <type>json</type>
      <classifier>meta</classifier>
    </dependency>
    <dependency>
      <groupId>com.backbase.pp</groupId>
      <artifactId>payments-processor</artifactId>
    </dependency>
    <dependency>
      <groupId>com.backbase.pp</groupId>
      <artifactId>payments-processor-event-handler</artifactId>
      <classifier>classes</classifier>
    </dependency>
    <dependency>
      <groupId>com.backbase.pp</groupId>
      <artifactId>payments-processor-event-handler</artifactId>
      <type>json</type>
      <classifier>meta</classifier>
    </dependency>
    <dependency>
      <groupId>com.backbase.pp</groupId>
      <artifactId>payments-processor-event-handler</artifactId>
    </dependency>
<!-- end::payments-processing-bom[] -->
  </dependencies>
</project>